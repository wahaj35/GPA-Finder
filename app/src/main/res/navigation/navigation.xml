<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">


    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.about.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.about.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_dataInput"
            app:destination="@id/dataInput"
            app:popUpTo="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/dataInput"
        android:name="com.example.about.InputDataFragment"
        android:label="Input Data"
        tools:layout="@layout/fragment_input_data" >
        <action
            android:id="@+id/action_dataInput_to_resultFragment"
            app:destination="@id/resultFragment" />
        <action
            android:id="@+id/action_dataInput_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.about.ResultFragment"
        android:label="Student Report"
        tools:layout="@layout/fragment_result" />
</navigation>