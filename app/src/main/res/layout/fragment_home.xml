<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">



        <View
            android:id="@+id/headerDesign"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/header_design" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/headerDesign"
            android:rowCount="5"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="-80dp"
            android:columnCount="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/oneSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/oneSubjectCardsStyles">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/oneSubject"
                        android:textColor="@color/holoBlue"
                        android:textSize="50dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/oneSubject_text"
                        android:textColor="@color/holoBlue"
                        android:textSize="30dp"
                        android:textStyle="italic" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/twoSubjects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/twoSubjectsCardsStyles">
